@model ATM.Models.Document

@{
    ViewBag.Title = "سند جدید";
}
<div class="create">
    <span class="title">• سند جدید</span>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "warning" })

        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "warning" })

        @Html.LabelFor(model => model.Submit)
        @Html.EditorFor(model => model.Submit)
        @Html.ValidationMessageFor(model => model.Submit, "", new { @class = "warning" })

        @Html.LabelFor(model => model.Expire)
        @Html.EditorFor(model => model.Expire)
        @Html.ValidationMessageFor(model => model.Expire, "", new { @class = "warning" })

        @Html.LabelFor(model => model.Body)
        @Html.EditorFor(model => model.Body)
        @Html.ValidationMessageFor(model => model.Body, "", new { @class = "warning" })

        @Html.LabelFor(model => model.Comment)
        @Html.EditorFor(model => model.Comment)
        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "warning" })

        <input type="submit" value="بساز" />
    }
</div>

@section scripts{
    <script>
            $(function () {
                $("input[name='Submit'], input[name='Expire']").flatpickr(
                    {
                        enableTime: true,
                        dateFormat: 'Ymd'
                    }
                );
            });
    </script>
}